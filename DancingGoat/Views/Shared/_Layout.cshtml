@using DancingGoat.Helpers
@using DancingGoat.Models
<!DOCTYPE html>

<html>
<head id="head">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="UTF-8" />
    <title>@ViewBag.Title - Dancing Goat</title>
    <link href="@Url.Content("~/Content/Styles/Site.css")" rel="stylesheet" type="text/css" />
    @RenderSection("headers", required: false)
</head>
<body>
    <div class="page-wrap">
        <header class="header" role="banner">
            <div class="menu">
                <div class="container">
                    <nav role="navigation">
                        <ul>
                            <li>
                                @Html.ActionLink(Resources.DancingGoat.Home, "Index", "Home")
                            </li>
                            <li>
                                @Html.ActionLink(Resources.DancingGoat.Store, "Index", "Coffees")
                            </li>
                            <li>
                                @Html.ActionLink(Resources.DancingGoat.Articles, "Index", "Articles")
                            </li>
                            <li>
                                @Html.ActionLink(Resources.DancingGoat.AboutUs, "Index", "About")
                            </li>
                            <li>
                                @Html.ActionLink(Resources.DancingGoat.Cafes, "Index", "Cafes")
                            </li>
                            <li>
                                @Html.ActionLink(Resources.DancingGoat.Contact, "Index", "Contacts")
                            </li>
                            <li>
                                @Html.ActionLink(Resources.DancingGoat.Partnership, "Index", "Partnership")
                            </li>
                        </ul>
                    </nav>
                    <div class="additional-menu-buttons user-menu">
                        <nav role="navigation">
                            <ul class="dropdown-items-list dropdown-desktop-visible">
                                <li>
                                    @Html.ActionLink("English", "Index", "LanguageSelector", LanguageSwitchHelper.GetLangugageSwitchParameters(ViewContext.RouteData.Values, "en-us", Model as IDetailItem), null)
                                </li>
                                <li>
                                    @Html.ActionLink("Español", "Index", "LanguageSelector", LanguageSwitchHelper.GetLangugageSwitchParameters(ViewContext.RouteData.Values, "es-es", Model as IDetailItem), null)
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <div id="message-box" class="container message">
                @Html.Partial("~/Areas/Admin/Views/Shared/_MessagesPartial.cshtml")
            </div>
            <div class="header-row">
                <div class="container">
                    <div class="col-xs-8 col-md-8 col-lg-4 logo">
                        <h1 class="logo">
                            @Html.ActionLink("Dancing Goat", "Index", new { controller = "Home" }, new { @class = "logo-link" })
                        </h1>
                    </div>
                </div>
            </div>
        </header>
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <div class="footer-wrapper">
        <footer role="contentinfo">
            <div class="footer-container">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-lg-4 footer-col">
                            <p>
                                @Html.Action("CompanyAddress", "Home")
                            </p>
                        </div>
                        <div class="col-md-4 col-lg-4 footer-col">
                            <h3>@Resources.DancingGoat.FollowUs_Title</h3>
                            <a class="followus-link" href="https://www.facebook.com/Dancing.Goat" target="_blank">
                                <img alt="@Resources.DancingGoat.FollowUsOnFacebook" class="" src="~/Content/Images/facebook-icon.png" title="@Resources.DancingGoat.FollowUsOnFacebook">
                            </a>
                            <a class="followus-link" href="https://twitter.com/DancingGoat78" target="_blank">
                                <img alt="@Resources.DancingGoat.FollowUsOnTwitter" class="" src="~/Content/Images/twitter-icon.png" title="@Resources.DancingGoat.FollowUsOnTwitter">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container copyright">
                Copyright &copy; @DateTime.Now.Year Dancing Goat. All rights reserved.
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        function toggleEditMode(isChecked) {
            const body = document.getElementsByTagName('body')[0];
            isChecked ? body.classList.add('edit-mode') : body.classList.remove('edit-mode');
        }
    </script>


</body>
</html>